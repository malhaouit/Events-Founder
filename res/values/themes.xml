<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.LocalEventFinder" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
<!--        <item name="android:fontFamily">@font/your_selected_font</item>-->
    </style>

    <style name="Theme.LocalEventFinder" parent="Base.Theme.LocalEventFinder" />

    <!-- EventDetailActivity TextViews Styles -->
    <style name="eventNameStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#2B8EDE</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="eventDateTimeStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#757575</item>
        <item name="android:paddingBottom">8dp</item>
    </style>
    
    <style name="EventDescriptionStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#757575</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EventDetailStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:paddingBottom">8dp</item>
    </style>
    
    <style name="eventLocationStyle">

    </style>

    <!-- Custom Button Style -->
    <style name="CustomButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:backgroundTint">@color/accent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">5dp</item>
    </style>
    
</resources>
